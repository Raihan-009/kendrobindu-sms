@baseUrl = http://localhost:8000

### Reset database
POST {{baseUrl}}/reset-database

### Create a new student
POST {{baseUrl}}/students/
Content-Type: application/json

{
    "name": "Mir Nowshad",
    "hsc_batch": "2018",
    "kb_batch": "Durbar",
    "phone": "01711111111",
    "address": "Dhaka, Bangladesh"
}

### Get all students
GET {{baseUrl}}/students/

### Get student details (including payment history)
GET {{baseUrl}}/students/XZV6X1-2018

### Update student information
PUT {{baseUrl}}/students/XZV6X1-2018
Content-Type: application/json

{
    "name": "Raihan Islam Updated",
    "hsc_batch": "2018",
    "kb_batch": "Duronto",
    "phone": "01722222222",
    "address": "Updated Address, Dhaka, Bangladesh"
}

### Delete a student
DELETE {{baseUrl}}/students/IEEFXL-2018

### Create attendance record
POST {{baseUrl}}/attendance/
Content-Type: application/json

{
    "student_id": "XZV6X1-2018",
    "date": "2023-06-16",
    "present": true
}

### Update existing attendance record
POST {{baseUrl}}/attendance/
Content-Type: application/json

{
    "student_id": "SE4MJY-2018",
    "date": "2023-05-15",
    "present": false
}

### Delete attendance record
DELETE {{baseUrl}}/attendance/FB5SST-2018/2023-06-16

### Get students by KB batch
GET {{baseUrl}}/students/batch/Duronto

### Get monthly attendance
GET {{baseUrl}}/monthly_attendance/XZV6X1-2018/2023/6

### Create payment record
POST {{baseUrl}}/payments/
Content-Type: application/json

{
    "student_id": "4MG3FL-2018",
    "date": "2023-08-15",
    "payment": 2000.00,
    "paid": 1000.00,
    "total_subjects": 3
}

### Delete payment record
DELETE {{baseUrl}}/payments/CXY2LJ-2018/2023-07-15

### Get student payment history
GET {{baseUrl}}/payments/student/XZV6X1-2018

### Get yearly payments
GET {{baseUrl}}/payments/year/2023

### Get monthly payments
GET {{baseUrl}}/payments/month/2023/7

### Get due payments
GET {{baseUrl}}/payments/due

### Get monthly payment for a student
GET {{baseUrl}}/monthly_payment/XZV6X1-2018/2023/8

### Get student yearly dues
GET {{baseUrl}}/students/4MG3FL-2018/yearly_dues
